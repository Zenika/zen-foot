<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.zenika.zenfoot.model">
	<class name="Game">
		<id name="id" column="game_id">
			<generator class="native" />
		</id>
		<one-to-one name="team1Id" class="com.zenika.zenfoot.model.Team"/>
		<one-to-one name="team2Id" class="com.zenika.zenfoot.model.Team"/>
		<property name="kickoff" />
		<property name="goalsForTeam1" />
		<property name="goalsForTeam2" />
	</class>
</hibernate-mapping>