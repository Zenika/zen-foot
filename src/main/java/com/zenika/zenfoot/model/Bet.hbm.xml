<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.zenika.zenfoot.model">
    <class name="Bet" table="bets">
        <id name="id">
            <generator class="native" />
        </id>
        <many-to-one name="player" column="player_id" not-null="true" cascade="none"/>
        <many-to-one name="match" column="match_id" not-null="true" cascade="none"/>
        <property name="goalsForTeam1" column="goals_team_1" not-null="true"/>
        <property name="goalsForTeam2" column="goals_team_2" not-null="true"/>
    </class>
</hibernate-mapping>
