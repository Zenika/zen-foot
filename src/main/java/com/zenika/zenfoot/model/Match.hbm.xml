<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.zenika.zenfoot.model">
    <class name="Match" table="matches">
        <id name="id">
            <generator class="native" />
        </id>
        <many-to-one name="team1" column="team_1_id" not-null="true"/>
        <many-to-one name="team2" column="team_2_id" not-null="true"/>
        <property name="kickoff" />
        <property name="goalsForTeam1" column="goals_team_1" />
        <property name="goalsForTeam2" column="goals_team_2" />
    </class>
</hibernate-mapping>